@model IEnumerable<PMS.Models.Secretaria>

<div class="content-heading">
    <div>
        @ViewBag.Title
    </div>
</div>
<div class="input-group mb-3">
    <input class="form-control" type="text" placeholder="Localizar Secretária" aria-label="Recipient's username" aria-describedby="basic-addon2" />
    <div class="input-group-append">
        <button class="btn btn-outline-secondary" type="button">Localizar</button>
    </div>
</div>
<div class="card card-default">
    <div class="card-header">Relação de Secretárias</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>  @Html.DisplayNameFor(model => model.Nome)</th>
                        <th>  @Html.DisplayNameFor(model => model.Setor)</th>
                        <th>  @Html.DisplayNameFor(model => model.Observacao)</th>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @Html.DisplayFor(modelItem => item.Nome)</td>
                            <td> @Html.DisplayFor(modelItem => item.Setor)</td>
                            <td> @Html.DisplayFor(modelItem => item.Observacao)</td>
                            <td>
                                @Html.ActionLink("Selecionar", "ConfirmarEncaminhamento", new { id = item.SecretariaId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <hr />
        @Html.ActionLink("Voltar", "Index")
    </div>
</div>
