@model IEnumerable<PMS.Models.Secretaria>

<div class="content-heading">
    <div>
        @ViewBag.Titulo
        <!-- Breadcrumb below title-->
        <ol class="breadcrumb breadcrumb px-0 pb-0">
            <li class="breadcrumb-item">
                <a class="text-muted" href="@Url.Action("Encaminhamento", "Terceirizado")">Inicio</a>
            </li>
        </ol>
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Setor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Observacao)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Setor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacao)
            </td>
            <td>
                @Html.ActionLink("Confirmar", "ConfirmarEncaminhamento", new { lotacaoId = item.SecretariaId })
            </td>
        </tr>
    }

</table>
