@model PMS.Models.OcorrenciaSec

@{
    ViewBag.Title = "Edit";
}

@section scripts{
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDt0pnAgxUq7nEb8SwAzSEgNw_t2zKuLwI&callback=initMap"></script>

    @Scripts.Render("~/bundles/ocorrencia")

    <script>
        $(function () {
            geocodeAddress();
