@model IEnumerable<PMS.Models.OcorrenciaPB>



@{
    ViewBag.Title = "Index";
    List<string> locations = new List<string>();
    double menor = 0;
    double maior = 0;
    var count = 0;

    foreach (var l in Model)
    {
        if (count == 0)
        {
            menor = double.Parse(l.latitude.Replace('.', ','));
            maior = double.Parse(l.longitude.Replace('.', ','));
        }

        if (double.Parse(l.latitude) < menor)
        {
            menor = double.Parse(l.latitude.Replace('.', ','));
        }

        if (double.Parse(l.longitude) < maior)
        {
            maior = double.Parse(l.longitude.Replace('.', ','));
        }

        var array = l.latitude + "&" + l.longitude;
        locations.Add(array);
        count++;
    }

}


@section scripts{
    @*@Scripts.Render("~/bundles/ocorrencia")*@

    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDt0pnAgxUq7nEb8SwAzSEgNw_t2zKuLwI&callback=initMap"></script>

    <script>

        function initMap() {
            var la = parseFloat(@menor.ToString().Replace(',','.'));
            var lo = parseFloat(@maior.ToString().Replace(',','.'));

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 8,
                center: { lat: la, lng: lo }
            });

            setMarkers(map);
        }

        var loc = @Html.Raw(Json.Encode(locations));
        var marker, i;

        function setMarkers(map) {

            for (var i = 0; i < loc.length; i++) {
                var points = loc[i].split('&');
                var lat = parseFloat(points[0]);
                var long = parseFloat(points[1]);

                marker = new google.maps.Marker({
                    position: { lat: lat, lng: long},
                    map: map
                });

                var infowindow = new google.maps.InfoWindow();

                google.maps.event.addListener(marker, 'click', (function (marker, i) {
                    return function () {
                        var points = loc[i].split('&');
                        var lat = parseFloat(points[0]);
                        var long = parseFloat(points[1]);
                        geocoder = new google.maps.Geocoder();
                        geocoder.geocode({ 'location': { lat: lat, lng: long } }, function (results, status) {
                            console.log(i)
                            console.log('{ lat: ' +lat + ', lng:'+ long +'}')
                            console.log(results[0].formatted_address)
                            infowindow.setContent(results[0].formatted_address);
                            infowindow.open(map, marker);
                        });
                    }
                })(marker, i));
            }
        }


    </script>



}

