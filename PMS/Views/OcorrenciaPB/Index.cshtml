@model IEnumerable<PMS.Models.OcorrenciaPB>

<div class="content-heading">
    <div>
        | @Html.ActionLink("Tipo", "Index", "TipoOcorrenciaPB") | @Html.ActionLink("Descrição Ocorrência", "Index", "DescricaoOcorrenciaPB") | @Html.ActionLink("Status", "Index", "StatusOcorrenciaPB")
    </div>
</div>



<div class="card card-default">
    <div class="card-header">@Html.ActionLink("Nova Ocorrência", "Create")</div>
    <!-- START table-responsive-->
    <div class="table-responsive">
        <table class="table table-bordered table-hover" id="table-ext-1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.DescricaoOcorrenciaPB.Descricao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrefeituraBairro.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoOcorrenciaPB.Tipo)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>Comandos</th>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescricaoOcorrenciaPB.Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrefeituraBairro.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoOcorrenciaPB.Tipo)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.OcorrenciaPBId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.OcorrenciaPBId }) |
                            @Html.ActionLink("Mapa", "ViewMapa", new { id = item.PrefeituraBairroId }) |
                            @Html.ActionLink("Add Status", "SalvarHistoricoStatus", new { id = item.OcorrenciaPBId }) |
                            @Html.ActionLink("Historico", "HistoricoStatus", new { id = item.OcorrenciaPBId }) |
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <!-- END table-responsive-->
    <div class="card-footer">
        <div class="d-flex">

        </div>
    </div>
